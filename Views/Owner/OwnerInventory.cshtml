

@model IEnumerable<OwnerInventory>

@{
    ViewBag.Title = "Product";
}




<h2>Owner Inventory</h2>

<form method="get">
    <p>
        Product Name: <input name="productName" value="@ViewBag.ProductName" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockLevel)
            </th>
                                    <th>
                    Set Stock Level       
                 </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StockLevel)
                </td>
                     <td>
                        
               @*<a asp-area="" asp-controller="Owner" asp-action="@item.ProductID">Set Item Stock Level</a>          
               <a asp-controller="Owner" asp-action="OwnerSetStock" asp-route-area= "">Set Item Stock Level</a>*@
                 <a asp-action="OwnerSetStock" asp-route-id="@item.ProductID">Set Item Stock Level</a>


                        
                    </td>
            </tr>
        }
    </tbody>
</table>

      <div>   
    <a class ="linkButton" asp-area="" asp-controller="Owner" asp-action="OwnerIndex">Home Page</a> 
        
