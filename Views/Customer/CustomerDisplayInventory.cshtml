 @model IEnumerable<WDT_Assignment_2.Models.StoreInventory>

    @{ ViewBag.Title = "Product"; }
    <h2> @Html.DisplayFor(model => model.Store.Name)</h2>
    <form method="get">
        <p>
            Product Name:
            <input name="productName" value="@ViewBag.ProductName" />
            <input type="submit" value="Filter" />
        </p>
    </form>
     <form asp-action="addToCart">
    <table class="table">
        <thead>
            <tr>
                <th>
                  
                    @Html.DisplayNameFor(model => model.ProductID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StockLevel)
                </th>
                <th>
                    Quantity to purchase
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Store.Name)
                    @Html.DisplayFor(modelItem => item.ProductID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StockLevel)
                </td>
                <td>
                                        <input  class="form-control" /> 
                        <div asp-validation-for="StockLevel"></div> 
                </td>
                <td>
                                       
                            <input type="submit" value="Add to cart" />
                </td>
            </tr>
            }
        </tbody>
    </table>
        </form>
   
    
<a class="linkButton" asp-area="" asp-controller="Customer" asp-action="CustomerViewCart">View Cart</a>
    <a class="linkButton" asp-area="" asp-controller="Customer" asp-action="CustomerStoreSelect">Change Store</a>
    <a class="linkButton" asp-area="" asp-controller="Customer" asp-action="CustomerIndex">Home</a>