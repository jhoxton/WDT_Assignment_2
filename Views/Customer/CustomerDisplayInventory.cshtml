 @model IEnumerable<WDT_Assignment_2.Models.StoreInventory>
    @{ ViewBag.Title = "Product"; }
    <h2>@ViewBag.StoreName</h2>
    <form method="get">
        <p>
            Product Name:
            <input name="productName" value="@ViewBag.ProductName" />
            <input type="submit" value="Filter" />
        </p>
    </form>
   
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Product.Name)
                    </th>
                   <th>
                        Price
                    </th> 
                    <th>
                        Quantity in Stock
                    </th>
                    <th></th>
                </tr>
            </thead>
   
            <tbody>
                @foreach(var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Name)
                    </td>
             <td>
                      $  @Html.DisplayFor(modelItem => item.Product.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StockLevel)
                    </td>

                    <td>
                        <form asp-action="AddToCart">
                            <input type="hidden" name="ProductID" value="@item.ProductID" />
                            <input type="hidden" name="StoreID" value="@item.StoreID" />
                            <input type="submit" value="Add to cart" />
                        </form>
                    </td>
                
                </tr>
                }             
            </tbody>
        </table>
  
    <a class="linkButton" asp-area="" asp-controller="Customer" asp-action="CustomerViewCart">View Cart</a>
    <a class="linkButton" asp-area="" asp-controller="Customer" asp-action="CustomerStoreSelect">Change Store</a>
    <a class="linkButton" asp-area="" asp-controller="Customer" asp-action="CustomerIndex">Home</a>