@model WDT_Assignment_2.Models.Cart 
@*Ok, I think this means cart has been passed*@
<div>
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        ProductID
                    </th>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Remove From Cart
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model.ItemsInCart) { 
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.ProductID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Name)
                    </td>
                    <td>
                         @Html.DisplayFor(modelItem => item.Product.Price)
                    </td>
                    <td>
                          <a asp-action="RemoveFromCart" asp-route-id="@item">Remove Item</a>
 
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    <a class="linkButton" asp-area="" asp-controller="Customer" asp-action="CustomerCheckOut">Check Out</a>
</div>
<a class="linkButton" asp-area="" asp-controller="Customer" asp-action="CustomerIndex">Home</a>